@using Etrade.Data.Models.Entities
@model IEnumerable<Category>
<ul class="list-group">
    @if (ViewBag.Id == 0)
    {
        <a class="list-group-item active" href="/Home/List">
            <i class="fa-solid fa-angles-right">
                Tüm Kategoriler
            </i>
        </a>
    }
    else
    {
        <a class="list-group-item active" href="/Home/List">
            <i class="fa-solid fa-angles-right">
                Tüm Kategoriler
            </i>
        </a>
    }

    @foreach (var category in Model)
    {
        if (ViewBag.Id != 0)
        {
            if (category.Id == ViewBag.Id)
            {
                <a class="list-group-item active" href="/Home/List/@category.Id">
                    <i class="fa-solid fa-angles-right">
                        @category.Name
                    </i>
                </a>
            }
            else
            {
                <a class="list-group-item active" href="/Home/List/@category.Id">
                    <i class="fa-solid fa-angles-right">
                        @category.Name
                    </i>
                </a>
            }
        }
        else
        {
            <a class="list-group-item active" href="/Home/List/@category.Id">
                <i class="fa-solid fa-angles-right">
                    @category.Name
                </i>
            </a>
        }
    }
</ul>
