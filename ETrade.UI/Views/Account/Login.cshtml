@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!-- Login 13 - Bootstrap Brain Component -->
<section class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-3">
                            <a href="#!">
                                <img src="../img/bsb-logo.svg" alt="BootstrapBrain Logo" width="175" height="57">
                            </a>
                        </div>
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>
                        <form method="post">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.UserName, new{ @class = "form-control", @id="email", @placeholder = "name@example.com"})
                                        @Html.LabelFor(m => m.UserName,"Email", new { @class = "form-label "})
                                        @Html.ValidationMessageFor(m => m.UserName, "", new {@class="text-danger"})

                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                       @Html.PasswordFor(x => x.Password, new{ @class = "form-control", @id="password", @placeholder="Password" })
                                       @Html.LabelFor(x => x.Password, new { @class = "form-label" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex gap-2 justify-content-between">
                                        <div class="form-check">
                                           @Html.CheckBoxFor(x => x.RememberMe, new{ @class = "form-check-input", @id="rememberMe"})
                                           @Html.LabelFor(x => x.RememberMe, "Keep me logged in", new { @class = "form-check-label text-secondary" })
                                        </div>                                     
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">Don't have an account? <a href="~/Account/Register" class="link-primary text-decoration-none">Sign up</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
