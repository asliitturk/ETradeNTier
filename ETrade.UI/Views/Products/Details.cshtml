@model Product
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Category</h4>
    <dl class="col-sm-2">
        <dt class="row">
            @Html.DisplayNameFor(x => x.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Name)
        </dd>
        <dt class="row">
            @Html.DisplayNameFor(x => x.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Category.Description)
        </dd>
        <dt class="row">
          @Html.DisplayNameFor(x => x.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" width="75" height="75" />
        <dt class="row">
                @Html.DisplayNameFor(x => x.Stock)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Stock)
        </dd>
        <dt class="row">
                @Html.DisplayNameFor(x => x.Price)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Price)
        </dd>
        <dt class="row">
            @Html.DisplayNameFor(x => x.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.CreatedDate)
        </dd>
        <dt class="row">
                @Html.DisplayNameFor(x => x.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(x => x.UpdatedDate)
        </dd>
        <dt class="row">
                @Html.DisplayNameFor(x => x.IsHome)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(x => x.IsHome)
        </dd>
               <dt class="row">
                @Html.DisplayNameFor(x => x.IsApproved)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(x => x.IsApproved)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</div>
